@import 'nib'

@import 'reset'
@import 'normalize'

@import url('https://fonts.googleapis.com/css?family=Pacifico');
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,300,700');

$textColor = alpha(#FFF, 0.9)

*
    box-sizing border-box

html, body
    background:
        -webkit-linear-gradient(45deg, hsla(208, 97%, 86%, 1) 0%, hsla(208, 97%, 86%, 0) 70%),
        -webkit-linear-gradient(315deg, hsla(187, 93%, 84%, 1) 10%, hsla(187, 93%, 84%, 0) 80%),
        -webkit-linear-gradient(225deg, hsla(183, 92%, 88%, 1) 10%, hsla(183, 92%, 88%, 0) 80%),
        -webkit-linear-gradient(135deg, hsla(302, 91%, 87%, 1) 100%, hsla(302, 91%, 87%, 0) 70%);
    background:
        linear-gradient(45deg, hsla(208, 97%, 86%, 1) 0%, hsla(208, 97%, 86%, 0) 70%),
        linear-gradient(135deg, hsla(187, 93%, 84%, 1) 10%, hsla(187, 93%, 84%, 0) 80%),
        linear-gradient(225deg, hsla(183, 92%, 88%, 1) 10%, hsla(183, 92%, 88%, 0) 80%),
        linear-gradient(315deg, hsla(302, 91%, 87%, 1) 100%, hsla(302, 91%, 87%, 0) 70%);
    font-family 'Open Sans'
    font-weight 400
    size(100%, 100%)
    user-select none

.Root
    absolute top 0 right 0 bottom 0 left 0

.ClockContainer
    lost-align center
    perspective 2000px
    size(100%, 100%)
    transform-style preserve-3d

.Clock
    background alpha(#FFF, 0.5)
    border-radius 15px
    border 1px solid alpha(#FFF, 0.5)
    box-shadow 0 0 2px alpha(#FFF, 0.3)
    color #FFF
    font-size 50px
    font-weight bold
    padding 20px 10px
    perspective 10000px
    size(750px 180px)
    text-align center
    transform translate3d(-50%, -50%, 0) rotateY(30deg)
    transform-style preserve-3d

    &__Dots
        display inline-block
        line-height 130px
        vertical-align top
    &__Part
        display inline-block

.Digit
    display inline-block
    margin 0 2px
    position relative
    size(110px, 140px)

    &__Number
        perspective 10000px
        position relative
        size(100%, 100%)
        transform-style preserve-3d

.Number
    &__Half
        absolute left 0 right 0 top 0
        background #000
        border-radius 10px 10px 0 0
        font-size 120px
        font-weight bold
        height 50%
        overflow hidden
        perspective 1000px
        transform-origin bottom
        transform rotateX(0deg)

        &:before, &:after
            absolute left 0 right 0
            background-color #000
            box-shadow inset 0 0 2px alpha(#FFF, 0.1)
            border-radius 10px 10px 0 0
            line-height 140px
            text-align center

        &:before
            background-image linear-gradient(0, #000, alpha(#FFF, 0.1))
            content attr(data-front)
            z-index 1

        &:after
            background-image linear-gradient(0, alpha(#FFF, 0.1), #000)
            content attr(data-back)
            transform rotateX(180deg)
            z-index 0

        &--Bottom
            transform rotateX(-180deg)

        &--Flipped
            &:before
                z-index 0
            &:after
                z-index 1
